import lingo/pegcode/driver;
import string;
import math/math;

export {

    Expression ::= Var, Const, Rational, BinOp, Neg;

    Var(var : string);
    Const(const : int);
    Rational(l : Expression, r : Expression);
    BinOp(OpName : string, l : Expression, r : Expression);
    Neg(e: Expression);

    InfixToString(expr: Expression) -> string;
    // calculate(expr: Expression, VarsTree: Tree<string, Pair<int, int> >) -> Maybe<int>;
    // simplify(expr: Expression) -> Expression;
}

InfixToString(expr: Expression) -> string {
    switch(expr) {
        Var(var) : var;
        Const(const) : i2s(const);
        Rational(l, r) : {
            if (r == Const(1)) {
                InfixToString(l);
            } else {
                InfixToString(l) + "/" + InfixToString(r);
            }
        }
        BinOp(OpName, l, r) : "(" + InfixToString(l) + " " + OpName + " " + InfixToString(r) +")"
        Neg(e) : "(" + "-" + InfixToString(e) + ")";
    }
}

